<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TableLayout android:id="@+id/TableLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<TableRow>
		<TableLayout>
		<TableRow>
			<TextView android:id="@+id/room"  android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="0" android:textSize="26dp" android:text="20.0"
				android:textColor="#DAA520" android:textStyle="bold" android:layout_marginLeft="5dp">
			</TextView>
		</TableRow>
		<TableRow>
			<TextView android:text="room" android:id="@+id/roomtxt" android:layout_width="wrap_content"  android:textSize="12dp" android:textColor="#848484"
				android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_horizontal|center_vertical">
			</TextView>
		</TableRow>
		</TableLayout>
			<TableLayout android:id="@+id/TableLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1">
			<TableRow>
			<TextView android:id="@+id/position" android:layout_width="wrap_content" android:text="-" 
				android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
				android:textColor="#FFFFFF">
			</TextView>
			</TableRow>
			<TableRow>
			<TextView android:id="@+id/devicename" android:layout_width="wrap_content"  android:textSize="12dp" android:textColor="#848484"
				android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_horizontal|center_vertical">
			</TextView>
			</TableRow>
			<TableRow android:gravity="center_horizontal|center_vertical">
			<ImageView android:layout_width="wrap_content" android:id="@+id/favourite_img" android:visibility="gone" android:src="@android:drawable/btn_star_big_on" android:layout_height="wrap_content"/>
			</TableRow>
			</TableLayout>
		<TableLayout>
		<TableRow>
			<TextView android:id="@+id/floor" android:layout_width="wrap_content" android:textSize="26dp" android:text="20.0" 
				android:layout_height="wrap_content" android:layout_weight="0"
				android:textColor="#DAA520"  android:textStyle="bold" android:layout_marginRight="5dp">
			</TextView>
		</TableRow>
		<TableRow>
			<TextView android:text="floor" android:id="@+id/floortxt" android:layout_width="wrap_content"  android:textSize="12dp" android:textColor="#848484"
				android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_horizontal|center_vertical">
			</TextView>
		</TableRow>
		</TableLayout>
		</TableRow>
	</TableLayout>
</LinearLayout>