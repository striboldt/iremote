<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/button_active"/>
            <item android:drawable="@drawable/rectangle_active" android:left="19dp" android:right="19dp" android:bottom="4dp" android:top="4dp"/>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/button_inactive"/>
            <item android:drawable="@drawable/rectangle_inactive" android:left="19dp" android:right="19dp" android:bottom="4dp" android:top="4dp"/>
        </layer-list>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/button_active"/>
            <item android:drawable="@drawable/rectangle_active" android:left="19dp" android:right="19dp" android:bottom="4dp" android:top="4dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/button_active"/>
            <item android:drawable="@drawable/rectangle_active" android:left="19dp" android:right="19dp" android:bottom="4dp" android:top="4dp"/>
        </layer-list>
    </item>
</selector>